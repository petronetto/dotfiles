{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

set -eufo pipefail

echo "Installing packages via Homebrew..."

# Ensure Homebrew is in PATH
if [[ $(uname -m) == "arm64" ]] && [[ -f /opt/homebrew/bin/brew ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ -f /usr/local/bin/brew ]]; then
    eval "$(/usr/local/bin/brew shellenv)"
fi

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

echo "Package installation complete!"

# Post-installation configurations
echo "Configuring installed packages..."

# Link Node LTS version if any versioned node is installed
NODE_VERSION=$(brew list --formula | grep -E '^node@[0-9]+$' | head -n1)
if [[ -n "$NODE_VERSION" ]]; then
    echo "Linking $NODE_VERSION..."
    brew link "$NODE_VERSION" --force --overwrite
fi

echo "All packages installed and configured successfully!"

{{ end -}}
